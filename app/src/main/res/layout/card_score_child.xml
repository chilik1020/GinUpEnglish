<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_score_child"
    android:background="@drawable/card_score_child_bg"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvChildScoreCardTopic"
            style="@style/CardChildTextStyle"
            tools:text="Random questions"
            android:textSize="22sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--style="@style/CardChildTextStyle"-->
                <!--android:textSize="16sp"-->
                <!--android:text="attempts: "/>-->

            <!--<TextView-->
                <!--android:id="@+id/tvChildScoreCardAttempts"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--style="@style/CardChildTextStyle"-->
                <!--android:textSize="16sp"-->
                <!--android:text="24"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                style="@style/CardChildTextStyle"
                android:textSize="16sp"
                android:text="average: "/>

            <TextView
                android:id="@+id/tvChildScoreCardAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/CardChildTextStyle"
                android:textSize="16sp"
                android:text="70%"/>

        </LinearLayout>

        <RelativeLayout

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivChildScoreCardStars"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:src="@drawable/stars_0" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

